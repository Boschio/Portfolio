---
export interface Props {
    title: string;
    img: string;
	details: string;
    techStack: string;
	github?: string;
    link?: string;
}

const { title, img, details, techStack, github, link } = Astro.props;
---
<section class='m-5 md:w-[800px] hover:scale-105 rounded-lg p-4 bg-[#580d0de6] text-white'>
    <div class='flex flex-col md:flex-row items-center md:items-start'>
        <img src={img} class='w-[400px] mx-2 rounded-lg'>
        <div class='flex flex-col gap-5'>
            <h2 class='text-lg font-bold'>{title}</h2>
            <p>{details}</p>
            <p>{techStack}</p>
            {github? <p>Check it out on <a href={github} target="_blank" class='hover:text-orange-400 font-bold'>GitHub!</a></p> : ""}
            {link? <p>Check it out <a href={link} target="_blank" class='hover:text-orange-400 font-bold'>here!</a></p> : ""}
        </div>
    </div>
</section>